div class="answer-id-#{@question.best_answer.id}"
  p
    = @question.best_answer.body
    = 'üëç'
    - if current_user&.is_author?(@question.best_answer)
      = link_to 'Edit', '#', class: 'edit-answer-link', remote: true, data: { answer_id: @question.best_answer.id }
      = link_to 'Delete answer', answer_path(@question.best_answer), method: :delete, remote: true, data: { confirm: 'Are you sure?' }
      = form_with model: @question.best_answer, local: false, html: { id: "edit-answer-#{@question.best_answer.id}" }, class: 'hidden' do |f|
        = f.label :body, 'Your new answer'
        = f.text_area :body
        = f.submit 'Save'