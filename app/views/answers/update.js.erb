$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');
$('.flash-messages').html('<%= render 'shared/flash_messages' %>');

<% if !@answer.errors.present? %>
  <% if @answer == @question.best_answer %>
    $('.answer-id-<%= @answer.id %>').replaceWith('<%= j render 'answers/best_answer', resource: @question.best_answer %>');
  <% else %>
    $('.answer-id-<%= @answer.id %>').replaceWith('<%= j render @answer %>');
  <% end %>
<% end %>