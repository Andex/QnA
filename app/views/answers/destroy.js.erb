<% if !@answer.persisted? %>
  $('.flash-messages').html('<%= render 'shared/flash_messages' %>');
  <% if !@question.best_answer %>
    $('.answers .best').html('');
  <% end %>
  <% if @question.answers.count < 1 %>
    $('.answers').html('<h5>Be the first to leave an answer</h5>');
  <% else %>
    $('.answers table tbody').html('<%= j render @question.other_answers %>');
  <% end %>
  $('.answer-errors').html('')
<% end %>